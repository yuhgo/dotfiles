{
	"env": {
		"CLAUDE_CODE_ENABLE_TELEMETRY": "1",
		"OTEL_METRICS_EXPORTER": "otlp",
		"ENABLE_TOOL_SEARCH": "true"
	},
	"permissions": {
		"allow": [
			"Bash(npm run dev)",
			"Bash(npm run lint)",
			"Bash(npm run test:*)",
			"Bash(yarn dev)",
			"Bash(yarn lint)",
			"Bash(yarn format)",
			"Bash(bun run lint)",
			"Bash(bun run test:*)",
			"Bash(bun run format)",
			"Bash(bun run dev)",
			"Bash(mkdir:*)",
			"Bash(cp:*)",
			"Bash(ls:*)",
			"Bash(tree:*)",
			"Bash(grep:*)",
			"Bash(mv:*)",
			"Bash(find:*)",
			"Read(~/.zshrc)",
			"Read(~/.claude/settings.json)",
			"Bash(pkill:*)",
			"Bash(docker:*)",
			"Bash(docker compose:*)",
			"mcp__context7__resolve-library-id",
			"mcp__context7__get-library-docs",
			"Bash(claude mcp add:*)",
			"Bash(claude mcp:*)",
			"Bash(uv:*)",
			"Bash(uvx:*)",
			"Bash(terminal-notifier:*)",
			"Bash(bunx:*)",
			"Bash(claude --version)",
			"mcp__serena__list_dir",
			"WebFetch(domain:github.com)",
			"mcp__serena__find_file",
			"mcp__serena__activate_project",
			"Bash(brew list:*)",
			"Read(//opt/homebrew/Caskroom/claude-code/1.0.113/**)",
			"Bash(brew info:*)",
			"WebFetch(domain:superclaude.netlify.app)",
			"Bash(python3 -m pip:*)",
			"Read(//usr/local/**)",
			"Read(//Users/yamamotoyugo/.cache/uv/archive-v0/z8fPVKX6YwrHndM_ZCB5e/lib/python3.13/site-packages/superclaude-4.1.4.dist-info/**)"
		],
		"deny": [
			"Bash(sudo:*)",
			"Bash(rm:*)",
			"Bash(rm -rf:*)",
			"Bash(git push:*)",
			"Bash(git reset:*)",
			"Bash(git rebase:*)",
			"Read(.env.*)",
			"Read(id_rsa)",
			"Read(id_ed25519)",
			"Read(**/*token*)",
			"Read(**/*key*)",
			"Write(.env*)",
			"Write(**/secrets/**)",
			"Bash(curl:*)",
			"Bash(wget:*)",
			"Bash(nc:*)",
			"Bash(npm uninstall:*)",
			"Bash(npm remove:*)",
			"Bash(psql:*)",
			"Bash(mysql:*)",
			"Bash(mongod:*)",
			"mcp__supabase__execute_sql"
		],
		"ask": [],
		"defaultMode": "acceptEdits"
	},
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "ExitPlanMode",
				"hooks": [
					{
						"type": "command",
						"command": "cursor \"$(ls -t ~/.claude/plans/*.md | head -1)\"",
						"timeout": 5
					}
				]
			}
		],
		"Notification": [
			{
				"matcher": "",
				"hooks": [
					{
						"type": "command",
						"command": "terminal-notifier -title 'Claude Code' -subtitle '確認待ち' -message 'Claude Codeが許可を求めています' -sound Glass -activate com.todesktop.230313mzl4w4u92"
					}
				]
			}
		]
	},
	"statusLine": {
		"type": "command",
		"command": "bash ~/.claude/statusline-git.sh",
		"padding": 0
	},
	"language": "Think in English, interact with the user in Japanese. 日本語の回答は小学生の少年に優しく教えるお兄さんのように柔らかくわかりやすい内容で回答して",
	"alwaysThinkingEnabled": false
}
