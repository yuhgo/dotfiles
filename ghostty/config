# テーマ変更
theme = Kanagawa Wave

# フォント変更（英語用 + 日本語フォールバック）
font-family = "JetBrains Mono"
font-family = "HackGen"

# フォントサイズ変更
font-size = 14

# 背景透過
background-opacity = 0.8

# 背景ぼかし（macOS）
background-blur = 20

# アクティブでない分割ペインを暗くする
unfocused-split-opacity = 0.6

# ペイン境界線の色（オレンジ）
split-divider-color = #ff9500

# カーソルの透過度
cursor-opacity = 0.6

# macOS タイトルバーのスタイル（タブにする）
macos-titlebar-style = tabs

# フォントの線を太く
font-thicken

# ウィンドウ状態を保存する
window-save-state = always

# ウィンドウ余白
window-padding-x = 6
window-padding-y = 6

# 上下左右の余白を自動でバランス良く調整
window-padding-balance
# keybind = shift+enter=text:\x1b\r
keybind = shift+enter=text:\n

## キーバインド
# 画面分割（新規ペイン作成）
keybind = alt+shift+h=new_split:left
keybind = alt+shift+l=new_split:right
keybind = alt+shift+k=new_split:up
keybind = alt+shift+j=new_split:down

# ペイン間移動
keybind = alt+h=goto_split:left
keybind = alt+l=goto_split:right
keybind = alt+k=goto_split:top
keybind = alt+j=goto_split:bottom

# タブ間移動
keybind = cmd+shift+h=previous_tab
keybind = cmd+shift+l=next_tab

# cmd+left/right で行頭/行末移動（Neovim用）
keybind = super+left=text:\x1b[H
keybind = super+right=text:\x1b[F

# --- Macネイティブな挙動 ---
# タイトルバーを透明にしてスッキリさせる
macos-titlebar-style = transparent
# フルスクリーン時にMac標準の挙動にする
macos-window-shadow = true
# 入力中はマウスカーソルを隠す
mouse-hide-while-typing = true
