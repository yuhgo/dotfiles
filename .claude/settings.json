{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_harness_template": "claude/settings.security.json.template",
  "_harness_version": "2.6.45",
  "language": "japanese",
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*id_rsa*)",
      "Read(**/*id_ed25519*)",
      "Read(**/.ssh/**)"
    ],
    "ask": [
      "Bash(rm -r:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -fr:*)",
      "Bash(git reset --hard:*)",
      "Bash(git push -f:*)",
      "Bash(git push --force:*)",
      "Bash(git push --force-with-lease:*)",
      "Bash(git clean -f:*)",
      "Bash(git clean -fdx:*)",
      "Bash(git clean -fx:*)",
      "Bash(git rebase:*)",
      "Bash(git merge:*)"
    ]
  }
}
